<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"

    app:startDestination="@id/splash_screen">

    <include app:graph="@navigation/home_store" />
    <include app:graph="@navigation/product_details" />
    <include app:graph="@navigation/shopping_cart" />
    <include app:graph="@navigation/splash_screen" />
    <action
        android:id="@+id/action_global_splash_screen"
        app:destination="@id/home_store"
        app:popUpTo="@id/splash_screen"
        app:popUpToInclusive="true" />

</navigation>